extends ../layout/index

block content
  div(class="py-10")
    h1(class="text-4xl my-10 font-extrabold text-center") Bienes
      span(class="font-normal")  Raices
    h2(class="text-center text-2xl font-extrabold")=page

    if errors
      div(class="max-w-md mx-auto my-10")
        each error in errors
          p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")=error.msg

    div(class="mt-8 mx-auto max-w-md")
      div(class="bg-white py-8 px-4 shadow")
        form(class="space-y-6" method="POST" action="/auth/register" novalidate)
          div
            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="name") Nombre
            input(id="name" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="text" name="name" placeholder="Nombre" value=user ? user.name : '')
          div
            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="email") Correo
            input(id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="email" name="email" placeholder="Correo" value=user ? user.email : '')
          div
            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="password") Contraseña
            input(id="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="password" name="password" placeholder="Contraseña")
          div
            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="repeat_password") Confirma contraseña
            input(id="repeat_password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="password" name="repeat_password" placeholder="Repite tu contraseña")
          div(class="flex items-center justify-between")
            a(class="text-gray-500 text-xs" href="/auth/login") ¿Ya tienes una cuenta? Inicia sesión
            a(class="text-gray-500 text-xs" href="/auth/forgot-password") ¿Olvidaste tu contraseña?
          input(type="submit" value="Crear Cuenta" class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-bold cursor-pointer")
