extends ../layout/app

block styles
  link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block content
  //- pre= JSON.stringify(data, null, 2)
  div(class="my-5")
    h1(class="text-4xl my-10 font-extrabold text-center")= data.title

    div
      a(href="#" class="font-bold text-gray-600 text-sm") Categoría: 
        span(class="font-normal")= data.category.name

    div(class="mt-5 md:flex md:gap-4")
      div(class="md:w-2/3 bg-white shadow rounded-lg")
        img(src=`/uploads/${data.image}` alt=`propiedad ${data.title}`)

        div(class="px-5 py-10 space-y-5")
          h2(class="text-2xl leading-6 font-bold text-gray-900") Información de la propiedad

          p= data.description

          div(class="grid grid-cols-1 md:grid-cols-2 gap-3")
            p(class="text-gray-600 font-bold text-xs") Baño(s): 
              span(class="text-gray-800 block text-lg")= data.bathrooms

            p(class="text-gray-600 font-bold text-xs") Habitaciones: 
              span(class="text-gray-800 block text-lg")= data.bedrooms

            p(class="text-gray-600 font-bold text-xs") Estacionamiento(s): 
              span(class="text-gray-800 block text-lg")= data.parking

            p(class="text-gray-600 font-bold text-xs") Precio: 
              span(class="text-gray-800 block text-lg")= data.price.price

      div(class="md:w-1/3")
        h3(class="text-center md:pt-0 py-10  leading-6 text-2xl font-bold text-gray-900") Ubicación

        div(class="h-96" id="map")
          p(id="lat" class="hidden")= data.lat
          p(id="lng" class="hidden")= data.lng

        div(class="p-5 bg-white shadow")
          p(class="text-gray-600 font-bold text-xs") Dirección: 
            span(class="text-gray-800 block text-lg" id="street")= data.street

block scripts
  script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
  script(src="/js/show-map.js")